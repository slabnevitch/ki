extends _misc/main

block title
	| Магазины
	- var pageIndex = 'menu_010'
	
block content
	.page
		.wrapper
			+menu('breadcrumbs', ['главная', 'Магазины'])

		+backLink('Магазины', true)

		.shops
			.wrapper
				form(action="#" class="form").address-side-modal__form
					.address-side-modal__select 
						select(name="locations" data-searchdisable="true" class="fstdropdown-select")
							- var opts = ['Краснодар','Армавир','Кропоткин','Тихорецк','Славянск-на-Кубани','Тимашевск','Белореченск'];
							each opt, i in opts
								option(value=i+1)= opt

					button(type="button")#full-map-open.side-modal__to-map.to-map-side-modal
						.to-map-side-moda__title На карте
						+icon('loc')

			.shops__content
				.wrapper
					.shops__title 17 магазинов
				- var address = [{loc: 'г. Краснодар, ул. Северная, 320', aval: 18}, {loc: 'г. Армавир, ул. Тургенева, 148/1', aval: 11}, {loc: 'г. Тихорецк, ул. Энгельса, 82', aval: 8}, {loc: 'г. Кропоткин, просп. Ворошилова, 20', aval: 8}, {loc: 'г. Белореченск ул, Мира, 146', aval: 8}, {loc: 'Новая Адыгея, ул. Тургеневское Шоссе, 17', aval: 8}, {loc: 'г. Краснодар, ул. Ростовское шоссе, 14/6', aval: 8}, {loc: 'г. Краснодар, ул. Ростовское шоссе, 14/6', aval: 8}, {loc: 'г. Краснодар, ул. Октябрьская, 170', aval: 8}, {loc: 'г. Краснодар, ул. Уральская, 77', aval: 8}, {loc: 'г. Краснодар, ул. Уральская, 126', aval: 8}, {loc: 'г. Краснодар, ул. Уральская, 87 Б', aval: 8}, {loc: 'г. Краснодар, ул. Российская, 269/10', aval: 8}, {loc: 'г. Краснодар, ул. Западный Обход, 34', aval: 8}, {loc: 'г. Краснодар, ул. Дзержинского, 165', aval: 8}, {loc: 'г. Славянск-на-Кубани, ул. Пролетарская, 1', aval: 8}, {loc: 'г. Тимашевск ул, Пролетарская, 57', aval: 8}];
				.wrapper-smart
					.wrapper-flex.shops__tiles
						each item, i in address
							.address-list__item.address-list__item--contact
								.address-list__img._fit
									img._fit-img(src="img/page-menu/shops/"+(i+1)+".jpg" alt="alt")
								.address-list__content
									.address-list__loc= item.loc
									.address-list__phones
										.address-list__phones-row
											a(href="tel:88612128253").address-list__phone 8 (861) 212-8-253
										.address-list__phones-row
											a(href="tel:89885942025").address-list__phone 8 (988) 594-20-25
									.address-list__shedule Пн-Вс: 8.00-20.00

									a(href="#").btn.btn-sm.btn-loc Как добраться

			.wrapper.shops__map
				.shops__hint
				.shops__hint.shops__hint--empty
				.shops__hint.shops__hint--empty
				.shops__hint.shops__hint--empty
				.shops__hint.shops__hint--empty
				.shops__hint.shops__hint--empty
				.shops__balloon
					.address-list__item
						.address-list__img._fit
							img._fit-img(src="img/page-menu/shops/14.jpg" alt="alt")
						.address-list__content
							.address-list__loc г. Краснодар, ул. Западный Обход, 34
							.address-list__phones
								.address-list__phones-row
									a(href="tel:88612128253").address-list__phone 8 (861) 212-8-253
								.address-list__phones-row
									a(href="tel:89885942025").address-list__phone 8 (988) 594-20-25
							.address-list__shedule Пн-Вс: 8.00-20.00
				#map-shops.shops__map-wrap
