- var navs = [{name:'Главная', icon:'home'}, {name:'Каталог', icon:'catalog'}, {name:'Корзина', icon:'basket'}, {name:'Профиль', icon:'user', data: 'profile-menu-open'}, {name:'Меню', icon:'m-menu'}];
nav.mob-nav 
	ul.mob-nav__list
		each nav, i in navs
			li(id=nav.icon == 'user' ? "profile-menu-open" : nav.icon == 'm-menu' ? "menu-open"  : false class=i > 1 && i < 4 ? "mob-nav__item active" : "mob-nav__item")
				if nav.name == 'Каталог'
					div(id="multilevel-panel-open").mob-nav__link
						.mob-nav__icon
							+icon(nav.icon)
						.mob-nav__name= nav.name

						if i == 2
							.mob-nav__count 10
				else
					a(href="#").mob-nav__link
						.mob-nav__icon
							+icon(nav.icon)
						.mob-nav__name= nav.name

						if i == 2
							.mob-nav__count 10
