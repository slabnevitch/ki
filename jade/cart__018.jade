extends _misc/main

block title
	| Корзина__018
	- var pageIndex = 'cart_018';
	- var pagePrefix = 'cart-order';

block content
	.page.page-cart.page-order-total
		.wrapper
			+menu('breadcrumbs', ['главная', 'Корзина', 'оформление заказа'])

		.page-cart__top
			+backLink('Ваш заказ №1565747', true)
		
		.wrapper-smart
			.wrapper-flex.page-order-total__main
				.page-order-total__prods
					.cart-sidebar-block.cart-sidebar-block--transp
						.cart-sidebar-block__header
							.cart-sidebar-block__title К покупке 4 товарa
						.prods-in-cart
							- for (var i=0; i < 4 ; i++)
								a(href="#").prods-in-cart__item
									img(src="img/page-cart/in-cart/"+(i+1)+".jpg" alt="alt")
					.cart-total
						.cart-prod-count__row
							.cart-prod-count__key Товары, 4 шт.
							.cart-prod-count__val 18 411 ₽

						.cart-prod-count__row
							.cart-prod-count__key Скидка
							.cart-prod-count__val -3 682 ₽

						.cart-prod-count__row.cart-prod-count__row--total
							.cart-prod-count__key Итого:
							.cart-prod-count__val 14 729 ₽
				
				.page-order-total__qr
					img(src="img/page-cart/qr.svg" alt="alt")

				.page-order-total__slogan Откройте камеру мобильного телефона либо мобильное приложение вашего банка, откройте камеру и отсканируйте QR-код на экране. Подтвердите платеж.

