section.hits-tiles
	.wrapper-smart
		.wrapper-flex
			- var tiles = ['Шуруповерты', 'Отвертки', 'Бетоно<br>мешалки', 'Газонокосилки', 'Перфораторы', 'Генераторы', 'Бензопилы', 'Шлифмашины', 'Культиваторы', 'Пассатижи', 'Мойки', 'Все<br>категории'];	
			each tile, i in tiles
				.hits-tile
					if i < 11
						.hits-tile__img
							img(src="img/hits-tiles/"+(i+1)+".png" alt="alt")
					.hits-tile__name!= tile