.page-product__features
	.wrapper
		.product-features
			- var buts = ['Характеристики','Отзывы (4)','Расходники','Аналоги','Описание и файлы'];
			._tabs.product-features__tabs
				.product-features__overflow
					ul.tabs__buttons.product-features__list
						each item, i in buts
							li.product-features__item
								a(class=i==0 ? "product-features__link tab active" : "product-features__link tab" href='#')= item

				ul.tabs__container.product-features__container
					li.tab-content.product-features__content.active
						.product-features__table.table-product-features
