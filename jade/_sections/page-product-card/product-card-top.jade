.wrapper-smart.page-product__top.top-page-product
	.wrapper-flex
		.page-product__represent
			h1.product-title Акк. безударная дрель-шуруповерт Bosch GSR 120 Li кейс 2x2 Ач 649861

			.wrapper-flex.page-product__represent-container
				.product-view
					.product-info(data-da="product-sidebar,576,last")
						.product-info__col
							.product-info__rating
								+crystalRating('4,5')

							a(href="#").std-link 4 отзыва
						
						.product-info__col
							.product-info__vailability
								.product-info__aval-key В наличии
								a(href="#" data-modal-address).product-info__aval-val 6 магазинах
							
						.product-info__col
							a(href="#").std-link.product-info__analog Подобрать 
								br
								| аналог
				
					.product-view__screen.screen-product-view#product-image-gallery
						.billet.billet--action Акция
						+swiper('screen-product-slider', true, false, false)
							- for (var i=0; i < 7; i++)
								.swiper-slide.screen-product-view__slide._fit
									img._fit-img(src="img/page-product-card/slider/sm/"+i+".jpg" alt="alt")
					
					.product-view__nav.screen-product-nav
						+swiper('screen-product-thumbs', true, false, true)
							- for (var i=0; i < 7; i++)
								.swiper-slide.screen-product-nav__slide
									._fit
										img._fit-img(src="img/page-product-card/slider/sm/"+(i+1)+".jpg" alt="alt")

				.product-chars
					a(href="#" data-da="product-info,576,last").std-link.product-chars__trace Отследить
						br
						| цену и наличие
					.product-chars__table.table-product-chars
						- var keys = ['Напряжение аккумулятора', 'Максимальный крутящий момент', 'Количество скоростей работы', 'Max частота вращения шпинделя', 'Тип двигателя', 'Тип патрона', 'Диаметр зажимаемой оснастки', 'Режим сверления', 'Возможность быстрой смены патрона', 'Количество аккумуляторов', 'Емкость аккумулятора','Зарядное устройство в комплекте'];
						- var values = ['12 в', '28 Н/м', '1', '600 об/мин', 'щеточный' , 'быстрозажимной', '0.8-10 мм', 'Да', 'Да' , '1', '1.3  а*ч', 'Да'];

						each key, i in keys
							.table-product-chars__row
								.table-product-chars__key= key
								.table-product-chars__value= values[i]

					a(href="#").std-link.product-chars__more Подробнее
			
			include product-card-tabs

		aside.page-product__sidebar(data-da="page-product__represent,767.98,2")
			.product-sidebar
				.product-sku Артикул: 002266
				.product-actions(data-da="product-view,767.98,first")
					button(type="button").product-action
						+icon('compare')
						span.product-action__name Сравнить

					button(type="button").product-action
						+icon('favourites')
						span.product-action__name В избранное

				.product-price-block
					.product-price__vals
						.product-price__std 14 729 ₽ 
						.product-price__sale 18 411 ₽ 

					.product-bonus
						.product-bonus__val 29
						+icon('bonus')
						.product-bonus__note бонусов

				.product-sidebar__possibilities
					button(type="button").btn.btn-lg  в корзину
					a(href="#").btn.btn-lg.product-oneclick купить в 1 клик

				.product-sidebar__delivery Бесплатная доставка по Краснодару
					br
					| Доставка транспортными компаниями
					br
					| Доступен самовывоз
				
				.product-sidebar__offers
					- var offers = [{name: 'Оформить карту', text: 'Купить за 2 200 ₽/мес'}, {name: 'Купить в кредит', text: ''}, {name: 'Нашли дешевле', text: 'Гарантия низкой цены'}];
					each item, i in offers
						a(href="#").product-sidebar__offer.offer-product-sidebar
							.offer-product-sidebar__logo
								img(src="img/page-product-card/offers/"+(i+1)+".svg" alt="alt")

							.offer-product-sidebar__content
								.offer-product-sidebar__name= item.name
								if item.text !== ''
									.offer-product-sidebar__text= item.text
							.offer-product-sidebar__arrow
								+icon('chev-right')