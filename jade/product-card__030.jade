block title
	| Сравнение
	- var pageIndex = 'product_030';

block content
	.page.page-compare
		.wrapper
			+menu('breadcrumbs', ['главная', 'Сравнение'])

		+backLink('Сравнение', true)
				.page-top-block
					a(href="#").std-link Очистить

		.page-compare__tags
			- var tags = [{name: 'шуруповерты', value: '7'}, {name: 'защитные очки4', value: '4'}, {name: 'наборы бит со сверлами', value: '1'}, {name: 'Сумки для инструментов', value: '11'}, {name: 'ящики и органайзеры', value: '19'}];
			.wrapper
				.tags
					each tag, i in tags
						div(class=i==0 ? "tag active" : "tag")= tag.name
							.tag-count= tag.value
		
		.page-compare__cards.cards-page-compare
			.wrapper
				.cards-page-compare__check
					label.light-label
						input(type="checkbox" name="name" class="light-label__input" checked)
						span.light-label__check
							+icon('check')
						span.light-label__caption Показывать только отличия

				//- .cards-page-compare__sl
				+swiper('compare-cards', true, false, true)			
					- var cards = [{billet: 'Новинка', price: '8 390 ₽', sale: '', sbers: '99', tilte: 'Шуруповерт Вихрь СШ-550/1 72/16/2', aval: '4 магазинах', iconActive: '0'}, {billet: 'скидка', price: '5 070 ₽', sale: '6 411 ₽', sbers: '51', tilte: 'Дрель-шуруповерт Felisatti ДШ-10/260Э 210.5.1.00', aval: '6 магазинах', iconActive: false}, {billet: '', price: '7 850 ₽', sale: '', sbers: '79', tilte: 'Шуруповерт Elitech ДШ 0110 РЭ', aval: '2 магазинах', iconActive: '0'}, {billet: '', price: '12 590 ₽', sale: '', sbers: '129', tilte: 'Аккумуляторная дрель-шуруповерт Ресанта ДА-14-2Л 75/14/3', aval: '6 магазинах', iconActive: false}, {billet: '', price: '22 899 ₽', sale: '', sbers: '229', tilte: 'Аккумуляторная дрель-шуруповерт WorkMaster АШ-12М', aval: '6 магазинах', iconActive: false}, {billet: '', price: '9 990 ₽', sale: '', sbers: '100', tilte: 'Аккумуляторная дрель-шуруповерт Metabo PowerMaxx BS (кейс)', aval: '6 магазинах', iconActive: false}, {billet: 'уценка', price: '10 990 ₽', sale: '11 990 ₽', sbers: '120', tilte: 'Аккумуляторная дрель-шуруповерт DeWalt DCD996NT (без акб и зу)', aval: '6 магазинах', iconActive: false}, {billet: 'уценка', price: '20 729 ₽', sale: '24 940 ₽', sbers: '249', tilte: 'Аккумуляторная дрель-шуруповерт Bosch GSR 12 V-15 FC 06019F6000', aval: '6 магазинах', iconActive: '0'}];
					
