extends _misc/main

block title
	| Новости
	
block content
	.page
		.wrapper
			+menu('breadcrumbs', ['главная', 'Новости'])

		+backLink('Новости', true)

		.news-block
			sect.main-slider.news-block__slider
				.wrapper.news-block__slider-wrap
					.slider-navs
						.slider-nav.slider-nav--prev
							+icon('chev-down')
						.slider-nav.slider-nav--next
							+icon('chev-down')
					+swiper('main-slider__slider', true, false, true)
						- var titles = ['Магазин «Кубань Инструмент» открывается в г. Армавире', 'Магазин «Кубань Инструмент» поздравляет Вас c наступающим Новым годом и Рождеством!'];
						each item in titles
							.swiper-slide.news-block__item
								a(href="#").main-slider__slide._fit
									img._fit-img(src="img/page-menu/news/1.jpg" alt="alt")
								.news-block__slide
									.news-block__slide-title= item
									.news-block__slide-date 28.03.2022

			.news-block__content
				.wrapper
					.news-block__title Все новости
				.wrapper-smart
					.wrapper-flex.news-list
						- var news = [{title: '«Кубань Инструмент» поздравляет Вас с Днем Строителя!', date: '28.08.2022'}, {title: 'В ассортименте наших магазинов появилась продукция холдинга Henkel', date: '22.06.2022'}, {title: 'Дорогие дамы, от всей души поздравляем Вас с этим прекрасным праздником!', date: '06.03.2022'}, {title: 'Поздравляем Вас с Днем Защитника Отечества!', date: '22.02.2022'}];

						- var news2 = [{title: 'Магазин «Кубань Инструмент» открывается в г. Армавире', date: '28.08.2022'}, {title: '«Кубань Инструмент» поздравляет Вас с наступающим Новым годом и Рождеством!', date: '22.06.2022'}];

						each item, i in news
							a(href="#").news__item.item-news._fit
								.item-news__text
									.item-news__title= item.title
									.item-news__date= item.date
								img.item-news__img._fit-img(src="img/main-page-news/"+(i+1)+".jpg" alt="alt")

						each item, i in news2
							a(href="#").news__item.item-news._fit
								.item-news__text
									.item-news__title= item.title
									.item-news__date= item.date
								img.item-news__img._fit-img(src="img/page-menu/news/list/"+(i+1)+".jpg" alt="alt")

				.pagination-wrapper
					+pagination([1, '...', 14, 15, 16, '...', 189], '')

