extends _misc/main

block title
	| Акции

block content
	.page
		.wrapper
			+menu('breadcrumbs', ['главная', 'акции'])

		+backLink('Акции', true)

		sect.main-slider.main-slider--actions
			.wrapper
				.slider-navs
					.slider-nav.slider-nav--prev
						+icon('chev-down')
					.slider-nav.slider-nav--next
						+icon('chev-down')
				+swiper('main-slider__slider', true, false, true)
					- for (var i=0; i < 3; i++)
						a(href="#").swiper-slide.main-slider__slide._fit
							img._fit-img(src="img/page-menu/action.jpg" alt="alt")
		
		section.all-actions
			.wrapper
				h2.sect-title Все акции
			.wrapper-smart.all-actions__cards
				.wrapper-flex
					- for (var i=0; i < 4; i++)
						a(href="#").all-action
							.all-action__img._fit
								img._fit-img(src="img/page-menu/all-actions/"+(i+1)+".jpg" alt="alt")
							.all-action__text Lorem ipsum dolor sit amet, consectetuer adipiscing elit. Aenean commodo ligula eget dolor. Aenean massa.
			.wrapper
				.cards-more
					a(href="#").cards-more__link Показать еще

